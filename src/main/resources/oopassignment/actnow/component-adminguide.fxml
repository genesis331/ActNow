<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oopassignment.actnow.GuideAdminComponentController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <VBox GridPane.rowIndex="1">
            <children>
                <Label fx:id="disasterType" text="BLIZZARD">
                    <font>
                        <Font name="Montserrat Medium" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="guideTitle" text="Protect your Family">
                    <font>
                        <Font name="Montserrat ExtraBold" size="20.0" />
                    </font>
                </Label>
            </children>
            <GridPane.margin>
                <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
            </GridPane.margin>
        </VBox>
        <Button fx:id="actionBtn" contentDisplay="RIGHT" graphicTextGap="10.0" mnemonicParsing="false" style="-fx-background-color: orange;" text="Modify" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <font>
                <Font name="Montserrat Regular" size="12.0" />
            </font>
            <graphic>
                <ImageView fitHeight="15.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@edit.png" />
                    </image>
                </ImageView>
            </graphic>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Button>
    </children>
</GridPane>
